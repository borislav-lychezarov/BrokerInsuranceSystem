@using BrokerInsuranceSystem.Areas.TheBoss.Models
@model IEnumerable<GetAllUsersModelDto>

<div class="row">
    <p class="text-left">
        <a class="btn btn-success" asp-area="TheBoss"
           asp-controller="User"
           asp-action="CreateUser">Create</a>
    </p>
</div>
<div class="row">
    <table class="table table-hover">

        <thead>
            <tr>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-info"
                           asp-area="TheBoss"
                           asp-controller="User"
                           asp-action="EditUser"
                           asp-route-id="@user.Id">Edit</a>


                        <a class="btn btn-danger"
                           asp-area="TheBoss" asp-controller="User"
                           asp-action="DeleteUser"
                           asp-route-id="@user.Id" onclick="return confirm('Delete User!!');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

